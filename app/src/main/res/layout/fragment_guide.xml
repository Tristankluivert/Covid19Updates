<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluelyt"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/colortextree"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/world"
            />

        <com.kluivert.covid19updates.customViews.Poppins
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Covid19 Awareness"
            android:textColor="@color/colortext"
            android:textSize="18sp"
            />

    </androidx.cardview.widget.CardView>

<com.kluivert.covid19updates.customViews.Poppins
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="110dp"
    android:layout_marginStart="30dp"
    android:text="Symptoms"
    android:textStyle="bold"
    android:textSize="22sp"
    android:textColor="@color/colortext"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:weightSum="1.0"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
             app:cardBackgroundColor="@color/colortextree"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tired"
                />

            <com.kluivert.covid19updates.customViews.Poppins
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="Tiredness"
                android:textColor="@color/colortext"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:cardBackgroundColor="@color/colortextree"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cough"
                />

            <com.kluivert.covid19updates.customViews.Poppins
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="Cough"
                android:textColor="@color/colortext"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:cardBackgroundColor="@color/colortextree"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/fever"
                />

            <com.kluivert.covid19updates.customViews.Poppins
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="Fever"
                android:layout_gravity="center_horizontal"
                 android:textSize="12sp"
                android:textColor="@color/colortext"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.kluivert.covid19updates.customViews.Poppins
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:text="Prevention"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:textColor="@color/colortext"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="420dp"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:cardBackgroundColor="@color/colortextree"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mask"
                />

            <com.kluivert.covid19updates.customViews.Poppins
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="Wear a mask"
                android:layout_gravity="center_horizontal"
                 android:textSize="12sp"
                android:textColor="@color/colortext"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:cardBackgroundColor="@color/colortextree"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/washinghands"
                />

            <com.kluivert.covid19updates.customViews.Poppins
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="Wash Your Hands"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:textColor="@color/colortext"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:cardBackgroundColor="@color/colortextree"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/distance"
                />

            <com.kluivert.covid19updates.customViews.Poppins
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="Social Distancing"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:textColor="@color/colortext"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.kluivert.covid19updates.customViews.Poppins
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Helpline Number"
       android:textColor="@color/colortext"
        />


    <com.kluivert.covid19updates.customViews.Poppins
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="670dp"
        android:layout_marginStart="30dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="+234 80 097 000 010"
        android:textColor="@color/colortext"
        />

    <com.kluivert.covid19updates.customViews.Poppins
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="700dp"
        android:layout_marginStart="30dp"
        android:textSize="13sp"
        android:textColor="@color/colortext"
        android:textStyle="bold"
        android:text="+234 708 711 0839"/>


    <com.kluivert.covid19updates.customViews.Poppins
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="730dp"
        android:layout_marginStart="30dp"
        android:textSize="13sp"
        android:text="+234 703 670 890"
        android:textColor="@color/colortext"
        android:layout_marginBottom="40dp"
        />




</RelativeLayout>
</ScrollView>